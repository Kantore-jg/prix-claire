<%- include('../partials/header') %>

    <div class="row mb-4">
        <div class="col-md-12">
            <h2><i class="bi bi-bell"></i> Mes alertes</h2>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-plus-circle"></i> Créer une nouvelle alerte</h5>
                </div>
                <div class="card-body">
                    <form action="/alerts/create" method="POST">
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label for="materiau_id" class="form-label">Matériau</label>
                                <select class="form-select" id="materiau_id" name="materiau_id" required>
                                    <option value="">Sélectionner...</option>
                                    <% materials.forEach(material=> { %>
                                        <option value="<%= material.id %>">
                                            <%= material.nom %>
                                        </option>
                                        <% }); %>
                                </select>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="type_alerte" class="form-label">Type d'alerte</label>
                                <select class="form-select" id="type_alerte" name="type_alerte" required>
                                    <option value="hausse">Hausse de prix</option>
                                    <option value="baisse">Baisse de prix</option>
                                    <option value="changement">Changement de prix</option>
                                </select>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="seuil" class="form-label">Seuil (optionnel)</label>
                                <input type="number" step="0.01" class="form-control" id="seuil" name="seuil"
                                    placeholder="Prix seuil">
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="region" class="form-label">Région (optionnel)</label>
                            <input type="text" class="form-control" id="region" name="region"
                                placeholder="Filtrer par région">
                        </div>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle"></i> Créer l'alerte
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <% if (alerts.length===0) { %>
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> Vous n'avez aucune alerte configurée.
                </div>
                <% } else { %>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Matériau</th>
                                    <th>Type</th>
                                    <th>Seuil</th>
                                    <th>Région</th>
                                    <th>Statut</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% alerts.forEach(alert=> { %>
                                    <tr>
                                        <td>
                                            <%= alert.materiau_nom %> (<%= alert.unite %>)
                                        </td>
                                        <td>
                                            <% if (alert.type_alerte==='hausse' ) { %>
                                                <span class="badge bg-danger">Hausse</span>
                                                <% } else if (alert.type_alerte==='baisse' ) { %>
                                                    <span class="badge bg-success">Baisse</span>
                                                    <% } else { %>
                                                        <span class="badge bg-info">Changement</span>
                                                        <% } %>
                                        </td>
                                        <td>
                                            <%= alert.seuil ? alert.seuil + ' FBu' : '-' %>
                                        </td>
                                        <td>
                                            <%= alert.region || '-' %>
                                        </td>
                                        <td>
                                            <% if (alert.active) { %>
                                                <span class="badge bg-success">Active</span>
                                                <% } else { %>
                                                    <span class="badge bg-secondary">Inactive</span>
                                                    <% } %>
                                        </td>
                                        <td>
                                            <button class="btn btn-sm btn-warning toggle-alert"
                                                data-alert="<%= alert.id %>">
                                                <%= alert.active ? 'Désactiver' : 'Activer' %>
                                            </button>
                                            <form action="/alerts/delete/<%= alert.id %>" method="POST"
                                                style="display: inline;">
                                                <button type="submit" class="btn btn-sm btn-danger"
                                                    onclick="return confirm('Êtes-vous sûr?')">
                                                    <i class="bi bi-trash"></i> Supprimer
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                    <% }); %>
                            </tbody>
                        </table>
                    </div>
                    <% } %>
        </div>
    </div>

    <% if (user && user.typeCompte==='commercant' && typeof marketTrends !=='undefined' && marketTrends.length> 0) { %>
        <div class="row mt-5">
            <div class="col-md-12">
                <div class="card border-info">
                    <div class="card-header bg-info text-dark">
                        <h5 class="mb-0"><i class="bi bi-graph-up-arrow"></i> Tendances du Marché (Alertes actives)</h5>
                    </div>
                    <div class="card-body">
                        <p class="text-muted small">Ce tableau montre les matériaux les plus surveillés par la
                            communauté dans chaque région.</p>
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Matériau</th>
                                        <th>Région</th>
                                        <th>Nombre d'observateurs</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% marketTrends.forEach(trend=> { %>
                                        <tr>
                                            <td><strong>
                                                    <%= trend.materiau_nom %>
                                                </strong></td>
                                            <td>
                                                <%= trend.region || 'Toutes régions' %>
                                            </td>
                                            <td>
                                                <span class="badge bg-primary text-white">
                                                    <%= trend.alert_count %> alertes
                                                </span>
                                            </td>
                                        </tr>
                                        <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <% } %>

            <script>
                document.querySelectorAll('.toggle-alert').forEach(btn => {
                    btn.addEventListener('click', function () {
                        const alertId = this.dataset.alert;
                        fetch(`/alerts/toggle/${alertId}`, {
                            method: 'POST'
                        })
                            .then(response => response.json())
                            .then(data => {
                                if (data.success) {
                                    location.reload();
                                }
                            });
                    });
                });
            </script>

            <%- include('../partials/footer') %>