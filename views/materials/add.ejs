<%- include('../partials/header') %>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-success text-white">
                <h4 class="mb-0"><i class="bi bi-plus-circle"></i> Ajouter un matériau</h4>
            </div>
            <div class="card-body">
                <form action="/materials/add" method="POST">
                    <div class="mb-3">
                        <label for="nom" class="form-label">Nom du matériau <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="nom" name="nom" required>
                    </div>
                    <div class="mb-3">
                        <label for="unite" class="form-label">Unité de mesure <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="unite" name="unite" placeholder="ex: kg, m³, unité" required>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description (optionnel)</label>
                        <textarea class="form-control" id="description" name="description" rows="3"></textarea>
                    </div>
                    <button type="submit" class="btn btn-success w-100">
                        <i class="bi bi-check-circle"></i> Ajouter le matériau
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>

